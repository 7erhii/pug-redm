section.hero
  .hero__text
    .hero__title
      span Ваш домашний ТВ Мир
    .hero__subtitle
      span Более 200 каналов и огромная библиотека фильмов и сериалов ваш лучший источник домашнего развлечения!
    .hero__actions
      .main-btn
        span Оформить подписку
      .main-btn
        span Смотреть тарифы
  .hero__slider
    .slider
      .slider__aside
        .slider__aside-item
          .slider__aside-icon
            include ../../assets/images/Logo-svg.svg
          .slider__aside-text
            +image('logo-text.png')
            //- include ../../assets/images/Logo-text.svg

        .slider__aside-item
          .slider__aside-icon
            include ../../assets/images/Icon-search.svg
          .slider__aside-text
            span Поиск
        .slider__aside-item
          .slider__aside-icon
            include ../../assets/images/Icon-home.svg
          .slider__aside-text
            span Главная
        .slider__aside-item
          .slider__aside-icon
            include ../../assets/images/Icon-tv.svg
          .slider__aside-text
            span Телеканалы
        .slider__aside-item
          .slider__aside-icon
            include ../../assets/images/Icon-movie.svg
          .slider__aside-text
            span Кинозал
        .slider__aside-item
          .slider__aside-icon
            include ../../assets/images/Icon-folder.svg
          .slider__aside-text
            span Архив
        .slider__aside-item
          .slider__aside-icon
            include ../../assets/images/Icon-favorite.svg
          .slider__aside-text
            span Избранное
    .slider__content
      .slider__search.hidden
        .custom-input
          .custom-input__label
            span Поиск
          .custom-input__insert.custom-input__insert--active
            .custom-input__logo
              include ../../assets/images/Icons-user.svg
            .custom-input__input
              input(type="text")
            .custom-input__add.custom-input__add--forward
              include ../../assets/images/Icon-go.svg
          .custom-input__hint
            span Введите запрос
      .slider__home


